
@{

    Layout = "~/Views/Shared/_Layout2.cshtml";

}

<div style="width:auto;float:right">
    @if (@Session["UserEmail"] != null)
    {
        <span>Welcome : </span> @Session["UserEmail"] <span> | </span> @Html.ActionLink("Log Out", "Logout", "Display")
    }
    else
    {
        @Html.ActionLink("Register", "register", "Home")
        <span> | </span>
        @Html.ActionLink("Login", "Login", "Home", null)
    }
</div>
<div style="text-align: center; padding-top: 50px;">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="login-page">
            <div class="form1" style="max-width:400px; color:white">
                <div class="login">
                    <div class="login-header">
                        <h3 style="text-align:center;color:white;">CHANGE PASSWORD</h3>


                    </div>
                </div>
                <hr />

                <div class="form-group">
                    @Html.Label("Old Password", new { htmlAttributes = new { @class = "form-control" }, @for = "Password" })
                    @Html.Password("Password")

                </div>
                <div class="form-group">

                    @Html.Label("New Password", new { htmlAttributes = new { @class = "form-control" }, @for = "newPassword" })
                    @Html.Password("newPassword")

                </div>
                <div class="form-group">
                    @Html.Label("Re-Password", new { htmlAttributes = new { @class = "form-control" }, @for = "Confirmpwd" })
                    @Html.Password("ConfirmPassword")

                </div>
                <div class="form-group">
                    <input type="submit" value="Change Password" class="registerbtn " />
                </div>
            </div>
        </div>



    }
</div>@Html.Raw(TempData["msg"])
